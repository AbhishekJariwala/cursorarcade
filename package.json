{
  "name": "ide-arcade",
  "displayName": "IDE Arcade",
  "description": "Play classic games directly in VS Code - perfect for coding breaks!",
  "publisher": "AbhishekJariwala",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/AbhishekJariwala/cursorarcade"
  },
  "keywords": ["games", "arcade", "entertainment", "break", "fun"],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "icon": "media/IDEArcade.png",
  "galleryBanner": {
    "color": "#151110",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:ideArcade.start",
    "onCommand:ideArcade.openSidebar",
    "onCommand:ideArcade.openBottom",
    "onView:ideArcadeView",
    "onView:ideArcadeBottomView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ide-arcade",
          "title": "IDE Arcade",
          "icon": "media/IDEArcade.svg"
        }
      ],
      "panel": [
        {
          "id": "ide-arcade-panel",
          "title": "IDE Arcade",
          "icon": "media/IDEArcade.svg"
        }
      ]
    },
    "views": {
      "ide-arcade": [
        {
          "id": "ideArcadeView",
          "name": "Game",
          "type": "webview"
        }
      ],
      "ide-arcade-panel": [
        {
          "id": "ideArcadeBottomView",
          "name": "Game",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "ideArcade.start",
        "title": "Start IDE Arcade (Tab)",
        "category": "IDE Arcade"
      },
      {
        "command": "ideArcade.openSidebar",
        "title": "Open IDE Arcade (Sidebar)",
        "category": "IDE Arcade"
      },
      {
        "command": "ideArcade.openBottom",
        "title": "Open IDE Arcade (Bottom Panel)",
        "category": "IDE Arcade"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "ideArcade.openSidebar" },
        { "command": "ideArcade.openBottom" }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
